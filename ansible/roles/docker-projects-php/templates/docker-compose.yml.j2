web:
  build: php
  ports:
   - "8081:80"
  volumes:
   - {{ devhome | mandatory }}/projects:{{ devhome | mandatory }}/projects
  links: 
   - mysql
   - memcached
   - mail
   - elasticsearch
{% if proxy == 'docker-nginx-proxy' %}
  environment:
    VIRTUAL_HOST: {{ virtual_host | mandatory }}
{% endif %}
mysql:
  build: mysql
  environment:
    MYSQL_ROOT_PASSWORD: "root"
    MYSQL_USER: "develop"
    MYSQL_PASSWORD: "develop"
  ports:
   - "3306:3306"
  volumes:
   - {{ devhome | mandatory }}/projects/mysql/data:/var/lib/mysql
memcached:
  image: memcached:1.4.22
mail:
  build: mail
  volumes:
   - {{ devhome | mandatory }}/projects/mail:/var/mail
elasticsearch:
  image: elasticsearch:1.4.4
  ports:
    - "9200:9200"
    - "9300:9300"
  volumes:
    - "elasticsearch/data:/usr/share/elasticsearch/data"
